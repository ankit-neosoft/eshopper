<section ><!--form-->
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-1">
        <div class="login-form"><!--login form-->
          <h2>Login to your account</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, autofocus: true, placeholder: 'Email Address' %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
            </div>
            <span>
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :'keep me signed in' %>
                </div>
              <% end -%>
            </span>
            <div class="actions">
              <%= f.submit "Log in", class: "button" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>

      <div class="col-sm-1 or_border">
        <h2 class="or">OR</h2>
      </div>

      <div class="col-sm-4">
        <div class="social_login">
          <%= link_to user_google_oauth2_omniauth_authorize_path do %>
            <div class="google_sign_in btn btn-primary btn-lg">
              <i class="fa fa-google-plus"></i> 
              <span>sign in with google</span>
            </div>
          <% end %>

          <%= link_to user_facebook_omniauth_authorize_path do %>
            <div class="facebook_sign_in btn btn-primary btn-lg">
              <i class="fa fa-facebook"></i>
              <span>sign in with facebook</span>
            </div>
          <% end %>

          <%= link_to user_twitter_omniauth_authorize_path do %>
            <div class="twitter_sign_in btn btn-primary btn-lg">
              <i class="fa fa-twitter"></i>
              <span>sign in with twitter</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>