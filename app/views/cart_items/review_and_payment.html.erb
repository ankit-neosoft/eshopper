<section id="cart_items">
  <div class="container">
    <div class="breadcrumbs">
      <ol class="breadcrumb">
        <li><%=link_to 'Home', root_url%></li>
        <li class="active">Review & payment</li>
      </ol>
    </div>
    <div class="payment " id="payment">
      <div class="step-one">
        <h2 class="heading">Step 2: Review & payment </h2>
      </div>

      <div class="table-responsive cart_info " >
        <%= render partial: 'cart_items_detail', locals: {show_cart_details: true}%>
      </div>

      <div class="centerize">
        <%= form_for @order, :url => orders_path(@order) do |f| %>
          <%= f.hidden_field :address_id, value: params[:address_id]%>
          <%= f.hidden_field :status, value: "pending"%>
          <%= f.hidden_field :grand_total, value: @grand_total%>
          <%= f.hidden_field :shipping_charges, value: @shipping_charges%>
          <%= f.hidden_field :discount_amount, value: @discount_amount%>
          <%= link_to '<< Continue shopping >>', root_url, class:"btn btn-primary"%>
          <%= f.submit "Continue to pay", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
