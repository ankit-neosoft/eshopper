              <p>Web ID: 1089772</p>
              <%= image_tag "product-details/rating.png" %>
              <br>
              <span>
                <span >&#8377; <%= @product.price%></span>
                
                <div class="pull-right">
                  <% if @cart_items.present? && @cart_items.pluck('product_id').include?(@product.id) %>
                    <%= link_to cart_items_path, class: "btn btn-default bg-orange go-to-cart" do %>
                      <i class="fa fa-shopping-cart"> Added to cart</i>
                    <% end %>
                  <% else %>
                    <%= form_for @cart_item do |f|%>
                      <label >Quantity:</label>
                      <%= f.number_field :quantity, value: '1' %>
                      <%= f.hidden_field :product_id, value: @product.id%>
                      <%= button_tag type: "submit", class: "btn btn-default cart" do %>
                        <i class="fa fa-shopping-cart"></i>
                        Add to cart
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              </span>
              <p><b>Availability:</b> In Stock</p>
              <p><b>Condition:</b> New</p>
              <p><b>Brand:</b> <%= @product.brand.name %></p>
              <%= social_share_button_tag("Eshopper") %>
              <!-- <a href=""><%#= image_tag "/assets/product-details/share.png" %></a> -->
