          <div class="col-sm-5">
            <div class="view-product">
              <%= image_tag @product.pictures.first.image %>
              <h3>ZOOM</h3>
            </div>
            <div id="similar-product" class="carousel slide" data-ride="carousel">
                <!-- Wrapper for slides -->
              <div class="carousel-inner">
                <% @similar_products.each_slice(3).with_index do |slice, i|%>
                  <div class="item <%= ('active' if i==0) %>">
                    <% slice.each_with_index do |product,j|%>
                      <%=link_to image_tag(product.pictures.first.image, class: (j == 0 ? "product_left_margin" : "product_no_left_margin")), product_path(product) %>
                    <% end %>
                  </div>
                <% end %>
              </div>

                <!-- Controls -->
                <a class="left item-control" href="#similar-product" data-slide="prev">
                <i class="fa fa-angle-left"></i>
                </a>
                <a class="right item-control" href="#similar-product" data-slide="next">
                <i class="fa fa-angle-right"></i>
                </a>
            </div>
          </div>

          <div class="col-sm-7">
            <div class="product-information"><!--/product-information-->
              <%= image_tag "product-details/new.jpg",  class: "newarrival" %>
