<section id="cart_items">
  <div class="container">
    <div class="breadcrumbs">
      <ol class="breadcrumb">
        <li><%=link_to 'Home', root_url%></li>
        <li class="active">Shopping Cart</li>
      </ol>
    </div>
    <div class="table-responsive cart_info" >
      <%= render partial: 'cart_items_detail', locals: {show_cart_details: false}%>
    </div>
  </div>
</section> <!--/#cart_items-->



<% if @cart_items.count > 0 %>
  <section id="do_action">
    <div class="container">
      <div class="heading">
        <h3>What would you like to do next?</h3>
        <p>Choose if you have a discount code or reward points you want to use or would like to estimate your delivery cost.</p>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <div class="chose_area">
            <ul class="user_option">
              <li>
                <h4>Use Coupon Code<h4>
              </li>
              <li>
                <%= text_field_tag :code%>
              </li>
              <li>
              <%= link_to "Apply", onclick: '',class: "btn btn-default check_out"%>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="total_area">
            <ul>
              <li>Cart Sub Total <span id="cart_sub_total">&#8377; <%= @cart_items_total %></span></li>
              <li>VAT<span id="vat">&#8377; <%= @vat %></span></li>
              <li>Shipping Cost 
                <span id="shipping-cost">
                  <% if @cart_items_total<500%>
                    &#8377; <%= @shipping_cost %>
                  <% else %>
                    <%= @shipping_cost %>
                  <% end %>
                </span>
              </li>
              <li>Total <span id="cart_total">&#8377; <%= @grand_total %></span></li>
            </ul>
              <%= link_to 'Update', '#', class: "btn btn-default update" %>
              <%= link_to 'Check Out', check_outs_path, class: "btn btn-default check_out" %>
          </div>
        </div>
      </div>
    </div>
  </section><!--/#do_action-->
<% end %>
